{{>layout/header}}

<h1>게시글 수정</h1>

<div class="col-md-12">
  <div class="col-md-4">
    <form action="">
      <div class="form-group">
        <lavel for="title">제목</lavel>
        <input type="text"
               class="form-control"
               id="title"
               placeholder="제목을 입력하세요"
               value="{{posts.title}}"
        >
      </div>

      <div class="form-group">
        <lavel for="author">작성자</lavel>
        <input type="text"
               class="form-control"
               id="author"
               placeholder="작성자를 입력하세요"
               value="{{posts.author}}"
               readonly
        >
      </div>

      <div class="form-group">
        <lavel for="content">내용</lavel>
        <input type="text"
               class="form-control"
               id="content"
               placeholder="내용을 입력하세요"
               value="{{posts.content}}"
        >
      </div>

      <input type="hidden" value="{{posts.id}}" id="post_id">
    </form>

    <a href="/" role="button" class="btn button-secondary">취소</a>
    <button type="button" class="btn btn-primary" id="btn-save3">등록</button>
  </div>
</div>

{{>layout/footer}}
